<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ing_category"
        android:src="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndtOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_category"
        android:layout_width="80dp"
        android:layout_height="82dp"/>

    <TextView
        android:id="@+id/txt_category"
        app:layout_constraintBottom_toBottomOf="@id/ing_category"
        app:layout_constraintStar_toStartOf="parent"
        app:layout_constraintEnd_toEndtOf="parent"
        android:padding="8dp"
        android:text="Mercado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>